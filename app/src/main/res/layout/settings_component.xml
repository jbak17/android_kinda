<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:padding="@dimen/big_padding"
                                                   android:layout_height="wrap_content">

    <TextView android:id="@+id/textViewType"
              android:text="@string/typeName"
              android:fontFamily="@font/crafty_girls"
              android:layout_width="125dp"
              android:layout_height="@dimen/list_label_height"
              android:gravity="center"
              app:layout_constraintEnd_toStartOf="@+id/toggleButton" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginTop="24dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
              android:textSize="14sp"/>

    <TextView android:id="@+id/trackableType"

            android:fontFamily="@font/crafty_girls"
            android:layout_width="213dp"
            android:layout_height="@dimen/list_label_height"
            android:padding="@dimen/small_padding"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"/>

    <TextView android:id="@+id/textViewFrequency"
              android:text="@string/frequencyName"
              android:fontFamily="@font/crafty_girls"
              android:layout_width="125dp"
              android:layout_height="@dimen/list_label_height"
              android:gravity="center"
              app:layout_constraintEnd_toStartOf="@+id/trackableFrequency" android:layout_marginEnd="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/textViewType" app:layout_constraintHorizontal_bias="1.0"/>

    <TextView android:id="@+id/trackableFrequency"

            android:fontFamily="@font/crafty_girls"
            android:layout_width="213dp"
            android:layout_height="@dimen/list_label_height"
            android:padding="@dimen/small_padding"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/trackableType"
            app:layout_constraintStart_toStartOf="@+id/trackableType"
            app:layout_constraintEnd_toEndOf="@+id/trackableType" app:layout_constraintHorizontal_bias="0.0"/>

    <Switch android:id="@+id/toggleButton"
            android:layout_width="339dp"
            android:theme="@style/settingsSwitch"
            android:layout_height="@dimen/list_label_height"
            android:checked="false" style="@style/AlertDialog.AppCompat.Light"
            android:switchMinWidth="100dp"
            android:gravity="center"
            android:showText="true" tools:text="@string/activeToggleName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFrequency" android:textSize="14sp" android:splitTrack="false"
            android:visibility="visible" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <!--tools:layout_editor_absoluteX="73dp"/>-->

    <View android:id="@+id/divider"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/toggleButton"
          android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>