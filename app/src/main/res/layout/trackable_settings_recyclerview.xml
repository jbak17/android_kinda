<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:padding="@dimen/big_padding"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="@string/typeName"
            android:layout_width="125dp"
            android:layout_height="@dimen/list_label_height" android:id="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/toggleButton" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/trackableType"
            android:layout_width="213dp"
            android:layout_height="@dimen/list_label_height"
            android:padding="@dimen/small_padding"
            android:background="@android:color/holo_orange_light"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"/>

    <TextView
            android:text="@string/frequencyName"
            android:layout_width="125dp"
            android:layout_height="@dimen/list_label_height" android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/trackableFrequency" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:id="@+id/trackableFrequency"
            android:layout_width="213dp"
            android:layout_height="@dimen/list_label_height"
            android:padding="@dimen/small_padding"
            android:background="@android:color/holo_orange_light"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/trackableType"
            app:layout_constraintStart_toStartOf="@+id/trackableType"
            app:layout_constraintEnd_toEndOf="@+id/trackableType" app:layout_constraintHorizontal_bias="0.0"/>


    <Switch
            android:layout_width="339dp"
            android:theme="@style/Theme.AppCompat"
            android:layout_height="@dimen/list_label_height" android:id="@+id/toggleButton"
            android:checked="false" style="@style/AlertDialog.AppCompat.Light"
            android:switchMinWidth="100dp"
            android:showText="true" tools:text="@string/activeToggleName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="14sp" android:splitTrack="false"
            android:visibility="visible" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    tools:layout_editor_absoluteX="73dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>